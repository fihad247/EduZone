<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Register"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/layout_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="#445FD2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="center"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            />

        <EditText
            android:id="@+id/edname_signUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:textColorHint="#FF9800"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/shape_edittext"
            android:textColor="#FF9800"
            android:text=""
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/edphone_signUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone"
            android:textColorHint="#FF9800"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/shape_edittext"
            android:textColor="#FF9800"
            android:text=""
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/edemail_signUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textColorHint="#FF9800"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/shape_edittext"
            android:textColor="#FF9800"
            android:text=""
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/edpassword_signUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textColorHint="#FF9800"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/shape_edittext"
            android:textColor="#FF9800"
            android:text=""
            android:inputType="numberPassword"
            />

        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Now"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFffff"
            android:backgroundTint="#FFC107"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:textColor="#FFC107"
            android:text="or"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_go_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFffff"
            android:backgroundTint="#FFC107"
            android:visibility="gone"
            />





        <ProgressBar
            android:id="@+id/progressBar_post"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp" />



    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/thank_you"
        app:lottie_loop="false"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        />




</LinearLayout>