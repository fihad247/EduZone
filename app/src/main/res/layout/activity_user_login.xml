<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login_3"
    tools:context=".User_Login">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_sign_in2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:text="Welcome Back"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/bg_rocket" />

        <EditText
            android:id="@+id/edphone_signIn2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:background="@drawable/shape_edittext"
            android:gravity="center"
            android:hint="Phone"
            android:inputType="number"
            android:paddingRight="20dp"
            android:textColor="#FF9800"
            android:textColorHint="#445FD2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="35dp"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/edpassword_signIn2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:background="@drawable/shape_edittext"
            android:gravity="center"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="#FF9800"
            android:textColorHint="#445FD2"
            app:layout_constraintTop_toBottomOf="@+id/edphone_signIn2"
            tools:layout_editor_absoluteX="35dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar_login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/edpassword_signIn2" />

        <Button
            android:id="@+id/btn_signIn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:backgroundTint="#445FD2"
            android:text="  Submit  "
            android:textColor="#FFffff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_login2" />
        <Button
            android:id="@+id/btn_signIn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:backgroundTint="#445FD2"
            android:text="       Login   "
            android:textColor="#FFffff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_signIn2"
            android:visibility="gone"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>